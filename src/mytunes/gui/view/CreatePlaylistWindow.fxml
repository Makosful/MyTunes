                        <Label alignment="CENTER" text="Song list">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                  <HBox spacing="10.0">
                     <children>
                              <TextField fx:id="txtSongSearch" prefWidth="210.0" />
                        <JFXButton onAction="#clearSonglistSearch" text="X" />
                     </children>
                  </HBox>
                        <JFXListView fx:id="listSonglist" prefHeight="350.0">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                        </JFXListView>
                    </children>
                </VBox>
