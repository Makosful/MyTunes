                <Label text="Title: ">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="txtPlaylistName" prefWidth="250.0" promptText="Enter the title of the new playlist">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
            </children>
            <padding>
                <Insets left="50.0" right="50.0" />
